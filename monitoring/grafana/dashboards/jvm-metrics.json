{
  "dashboard": {
    "id": null,
    "title": "JVM Metrics - MS Lotosia",
    "tags": ["jvm", "spring-boot", "microservices"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "JVM Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=~\"$service\"}",
            "legendFormat": "{{job}} - Used"
          },
          {
            "expr": "jvm_memory_committed_bytes{job=~\"$service\"}",
            "legendFormat": "{{job}} - Committed"
          },
          {
            "expr": "jvm_memory_max_bytes{job=~\"$service\"}",
            "legendFormat": "{{job}} - Max"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "JVM Memory Usage %",
        "type": "graph",
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{job=~\"$service\"} / jvm_memory_max_bytes{job=~\"$service\"}) * 100",
            "legendFormat": "{{job}} - Usage %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=~\"$service\"}[5m])",
            "legendFormat": "{{job}} - {{method}} {{uri}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "HTTP Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "http_server_requests_seconds{job=~\"$service\", quantile=\"0.95\"}",
            "legendFormat": "{{job}} - 95th percentile"
          },
          {
            "expr": "http_server_requests_seconds{job=~\"$service\", quantile=\"0.50\"}",
            "legendFormat": "{{job}} - 50th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "JVM Threads",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_threads_live_threads{job=~\"$service\"}",
            "legendFormat": "{{job}} - Live threads"
          },
          {
            "expr": "jvm_threads_daemon_threads{job=~\"$service\"}",
            "legendFormat": "{{job}} - Daemon threads"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Garbage Collection",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count{job=~\"$service\"}[5m])",
            "legendFormat": "{{job}} - GC count"
          },
          {
            "expr": "jvm_gc_pause_seconds_sum{job=~\"$service\"} / jvm_gc_pause_seconds_count{job=~\"$service\"}",
            "legendFormat": "{{job}} - Avg GC time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(job)",
          "label": "Service",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
