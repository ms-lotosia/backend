{
  "dashboard": {
    "id": null,
    "title": "HTTP Requests per Second - MS Lotosia",
    "tags": ["http", "requests", "rps", "spring-boot", "microservices"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests per Second (All Services)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s]))",
            "legendFormat": "Total RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Requests per Second by Service",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "HTTP Requests per Second Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s])) by (job)",
            "legendFormat": "{{job}} RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Requests by HTTP Method",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s])) by (method, job)",
            "legendFormat": "{{method}} - {{job}}",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 5,
        "title": "Requests by HTTP Status",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s])) by (status, job)",
            "legendFormat": "{{status}} - {{job}}",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 6,
        "title": "Top Endpoints by RPS",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1s])) by (uri, job))",
            "legendFormat": "{{uri}} - {{job}}",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(job)",
          "multi": true,
          "includeAll": true,
          "current": { "selected": true, "text": "All", "value": "$__all" },
          "options": []
        }
      ]
    },
    "time": { "from": "now-1h", "to": "now" },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
